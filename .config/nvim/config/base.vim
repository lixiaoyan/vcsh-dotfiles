syntax on

filetype plugin on
filetype indent on

set autoread

set ruler
set number
set wrap

set showmatch

set whichwrap+=<,>,h,l,[,]
set backspace=indent,eol,start

set encoding=utf-8
set fileformats=unix,dos

set expandtab
set smarttab
set tabstop=2
set shiftwidth=2
set autoindent
set smartindent

set magic

set ignorecase
set smartcase

set hlsearch
set incsearch

set scrolloff=8

set completeopt+=noinsert

set clipboard=unnamedplus
